{
  "manifest_version": 3,
  "name": "Baekjoon Helper",
  "version": "1.0.0",
  "description": "백준 페이지 오른쪽 절반에 학습 도우미 패널을 띄워줘요.",
  "permissions": ["storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://www.acmicpc.net/*",
    "http://localhost:8080/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css", "dist/react-panel.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/*", "dist/assets/*", "dist/assets/**"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Baekjoon Helper"
  }
}
